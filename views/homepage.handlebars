<ol class="post-list">
  {{#each posts as |post|}}
  <ul>
    <article class="post">
      <div class="title">
        <h4>{{post.title}}</h4>
        <span>{{post.post_body}}</span>
      </div>
      <div class="meta">
        Created by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </ul>
  {{/each}}
</ol>